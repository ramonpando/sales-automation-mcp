# =============================================
# SALES AUTOMATION MCP - VARIABLES DE ENTORNO
# =============================================

# COPIA ESTE ARCHIVO A .env Y CONFIGURA TUS VALORES

# =============================================
# DATABASE CONFIGURATION
# =============================================
POSTGRES_PASSWORD=SalesAuto2025!
POSTGRES_USER=sales_user
POSTGRES_DB=sales_automation

# =============================================
# API KEYS (REQUERIDAS)
# =============================================

# Google Custom Search API
# Obtener en: https://developers.google.com/custom-search/v1/introduction
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CUSTOM_SEARCH_ID=your_custom_search_id_here

# Anthropic Claude API
# Obtener en: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================
# API KEYS OPCIONALES (Para mejores resultados)
# =============================================

# Hunter.io - Para encontrar emails corporativos
# Obtener en: https://hunter.io/api (50 emails/mes gratis)
HUNTER_API_KEY=your_hunter_api_key_here

# Apollo.io - Para información de contactos y fundadores
# Obtener en: https://apolloapi.com/
APOLLO_API_KEY=your_apollo_api_key_here

# =============================================
# CONFIGURACIÓN DEL SISTEMA
# =============================================

# Logging
LOG_LEVEL=info
ENABLE_DEBUG=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Cache
REDIS_TTL_HOURS=24
MAX_CACHE_ENTRIES=10000

# =============================================
# CONFIGURACIÓN REGIONAL
# =============================================
DEFAULT_COUNTRY=Mexico
DEFAULT_LANGUAGE=es
TIMEZONE=America/Mexico_City

# =============================================
# FEATURES TOGGLES
# =============================================
ENABLE_DATABASE_SAVE=true
ENABLE_LEAD_SCORING=true
ENABLE_EMAIL_VALIDATION=true
ENABLE_FOUNDER_SEARCH=true
ENABLE_SOCIAL_MEDIA_SEARCH=true

# =============================================
# DOKPLOY CONFIGURATION
# =============================================

# Estas variables se configuran en Dokploy UI
# No necesitas cambiarlas aquí

# CORS Origins (permitir N8N)
CORS_ORIGINS=*

# Health Check
HEALTH_CHECK_ENABLED=true
